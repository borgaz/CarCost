<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Użytkownik"
        android:textSize="42sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    <TextView
        android:text="Podaj swoje imię:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/userEditText"
        android:layout_alignStart="@+id/userEditText"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/userEditText"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Wybiierz jednostkę odległości:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_below="@+id/userEditText"
        android:layout_alignLeft="@+id/userEditText"
        android:layout_alignStart="@+id/userEditText"
        android:layout_marginTop="8dp" />

    <RadioGroup
        android:id="@+id/radioDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8">

        <RadioButton
        android:text="Kilometry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioKm" />

        <RadioButton
        android:text="Mile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioM" />

    </RadioGroup>

    <TextView
        android:text="Wybierz jednostkę pojemności:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_below="@+id/radioDistance"
        android:layout_alignLeft="@+id/radioDistance"
        android:layout_alignStart="@+id/radioDistance"
        android:layout_marginTop="8dp" />

    <RadioGroup
        android:id="@+id/radioVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9">

        <RadioButton
            android:text="Litry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:layout_weight="1" />

        <RadioButton
            android:text="Galony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton4"
            android:layout_weight="1" />
    </RadioGroup>

</RelativeLayout>