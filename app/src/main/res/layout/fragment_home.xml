<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.kuba.carcost.fragment.HomeFragment">

                <TextView
                    android:id="@+id/textView"
                    android:text="@string/fragment_home_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/avgAllTextView"
                    android:text="2,57"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView"
                    android:layout_alignBottom="@+id/textView"
                    android:layout_toRightOf="@+id/textView"
                    android:layout_toEndOf="@+id/textView"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="normal|bold"
                    android:layout_marginLeft="8dp" />

                <TextView
                    android:id="@+id/avgFuel"
                    android:text="@string/fragment_home_avg_fuel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_below="@+id/avgAllTextView"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignStart="@+id/textView"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/avgFuelTextView"
                    android:text="2,71"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="normal|bold"
                    android:layout_alignBaseline="@+id/avgFuel"
                    android:layout_alignBottom="@+id/avgFuel"
                    android:layout_alignLeft="@+id/avg30TextView"
                    android:layout_alignStart="@+id/avg30TextView" />

                <TextView
                    android:id="@+id/textView3"
                    android:text="@string/fragment_home_last30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_below="@+id/avgFuelTextView"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignStart="@+id/textView"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/avg30TextView"
                    android:text="2,71"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="normal|bold"
                    android:layout_alignBaseline="@+id/textView3"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_alignLeft="@+id/avgAllTextView"
                    android:layout_alignStart="@+id/avgAllTextView" />

                <com.github.mikephil.charting.charts.HorizontalBarChart
                    android:id="@+id/homeChart"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:layout_below="@+id/avg30TextView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp" />

        </RelativeLayout>

</ScrollView>